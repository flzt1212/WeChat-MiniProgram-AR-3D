.container {
  width: 100%;
  height: 100%;
}
.swiper-container {
  position: relative;
  width: 100%;
  height: 200px; /* 根据实际情况调整高度 */
}

.swiper-button-left, .swiper-button-right {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20px;
  cursor: pointer;
}

.swiper-button-left {
  left: 10px;
}

.swiper-button-right {
  right: 10px;
}

