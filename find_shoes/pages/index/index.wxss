page{
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.swiper-container {
  position: relative;
  width: 100%;
  height: 55%; 
  top:10px;
  left: 50%;
  transform:translate(-50%,0);
}

.swiper-button-left, .swiper-button-right {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20px;
  cursor: pointer;
}

.swiper-button-left {
  left: 10px;
}

.swiper-button-right {
  right: 10px;
}
swiper{
  width: 70%;
  margin: 0 auto;
  height: 100%;
}

.slide-image{
  width: 100%;
  height: 100%;
}
.choose-shoe {
  position: relative;
  margin-top: 30px;
  width: 100px;
  height: 40px;
  /* background-color: #09f;
  color: #fff; */
}

.image-container {
  position: relative;
  width: 100%;
  height: 30%;
}

.image-block{
  position: absolute;
  display: flex;
  top: 50%;
  transform:translate(0,-50%);
}

.image-item {
  width: 25vw;
  height: 25vw;
  padding: 10rpx;
  box-sizing: border-box;
}
.image-pic{
  width: 100%;
  height: 100%;
}
.selected {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}